<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MineTopBarStyle"
    android:elevation="@dimen/dp_2"
    android:translationZ="@dimen/dp_3"
    tools:showIn="@layout/activity_main">
    <!--图标-->
    <ImageView
        android:id="@+id/top_icon"
        android:layout_width="67dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/top_icon"/>
    <!--标题-->
    <TextView
        android:id="@+id/top_title"
        android:layout_toRightOf="@+id/top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="12dp"
        android:textSize="@dimen/sp_23"
        android:text="学习"/>
    <!--WIFI-->
    <ImageView
        android:id="@+id/top_wifi"
        android:layout_toLeftOf="@+id/top_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:src="@drawable/networkstate_off"/>
    <!--时间-->
    <TextView
        android:id="@+id/top_time"
        android:layout_toLeftOf="@+id/top_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:layout_marginRight="14dp"
        android:padding="0dp"
        android:textSize="23sp"
        android:text="12:30"/>
    <!--电量-->
    <TextView
        android:id="@+id/top_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:textSize="23sp"
        android:layout_marginRight="58dp"
        android:text="电量50%"/>
</RelativeLayout>